/* 新的关系系统UI */
#relationships-modal.modal-overlay {
  background-color: transparent !important;
  backdrop-filter: none !important;
  pointer-events: none; /* 允许穿透点击 */
}

body > #relationships-modal .modal-content {
  width: 100vw !important;
  height: 100vh !important;
  top: 0 !important;
  left: 0 !important;
  max-width: none !important;
  background-color: transparent;
  border: none;
  box-shadow: none;
  padding: 0;
  border-radius: 0; /* 全屏不需要圆角 */
  pointer-events: none; /* 让内容容器也变为可穿透的幽灵 */
  display: flex; /* 关键修复：使其成为flex容器 */
  flex-direction: column; /* 关键修复：设置垂直方向，确保子元素按列排列 */
}

#relationships-modal .modal-body {
  padding: 0;
  /* 关键修复：使用flex而不是固定高度，避免被子元素撑开 */
  flex: 1; /* 占据父容器剩余空间 */
  min-height: 0; /* 允许flex子项收缩 */
  display: flex; /* 使其成为flex容器 */
  flex-direction: column; /* 垂直方向 */
  overflow: hidden; /* 父容器不滚动 */
}

.relationships-container {
  display: flex;
  flex-direction: row; /* 明确水平排列 */
  /* 关键修复：使用100%宽高，适应父容器 */
  width: 100%; /* 使用100%而非100vw */
  height: 100%; /* 使用100%而非100vh */
  margin: 0; /* 无边距，完全占据容器 */
  background: var(--bg-primary, rgba(26, 26, 46, 0.95)); /* 使用UI规范变量 */
  border-radius: 0; /* 全屏模式无圆角 */
  overflow: hidden; /* 内容溢出隐藏 */
  backdrop-filter: blur(10px);
  position: relative; /* 为关闭按钮定位 */
  pointer-events: auto; /* 只让我们的UI实体可交互 */
  border: none; /* 全屏模式无边框 */
  box-shadow: none; /* 全屏模式无阴影 */
}

.relationships-close-btn {
  position: absolute;
  top: 15px;
  right: 60px; /* 向左移动：从20px改为60px */
  width: 30px;
  height: 30px;
  border: none;
  background: rgba(0,0,0,0.3);
  color: #fff;
  font-size: 24px;
  line-height: 30px;
  text-align: center;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
  z-index: 10;
}

.relationships-close-btn:hover {
  background: rgba(255,255,255,0.2);
  transform: scale(1.1);
}


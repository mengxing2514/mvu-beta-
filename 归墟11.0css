.separator-line {
  display: flex;
  align-items: center;
  text-align: center;
  color: #8b7355;
  font-size: 12px;
  flex-basis: 100%;
}

.separator-line::before,
.separator-line::after {
  content: '';
  flex: 1;
  border-bottom: 1px solid #444;
}

.separator-line:not(:empty)::before {
  margin-right: .5em;
}

.separator-line:not(:empty)::after {
  margin-left: .5em;
}

.hidden-toggle {
  display: none;
}
.collapsible-content {
  display: grid;
  grid-template-rows: 1fr;
  overflow: hidden;
  transition: grid-template-rows 0.1s ease-in-out, padding 0.1s ease-in-out, margin 0.1s ease-in-out;
  padding: 10px 5px;
  margin-top: 10px;
}

.collapsible-content > div {
    min-height: 0;
    opacity: 1;
    filter: blur(0px);
    transform: translateY(0);
    transition: opacity 0.25s ease-in-out 0.1s, filter 0.25s ease-in-out 0.1s, transform 0.25s ease-in-out 0.1s;
}

.hidden-toggle:not(:checked) + .separator-line + .collapsible-content {
  grid-template-rows: 0fr;
  padding-top: 0;
  padding-bottom: 0;
  margin-top: 0;
  margin-bottom: 0;
}

.hidden-toggle:not(:checked) + .separator-line + .collapsible-content > div {
    opacity: 0;
    filter: blur(4px);
    transform: translateY(-15px);
    transition-delay: 0s;
}

.separator-line {
  cursor: pointer;
  transition: color 0.3s;
}

.separator-line:hover {
  color: #c9aa71;
}

.separator-line::after {
  content: ' ▲';
  display: inline-block;
  transition: transform 0.4s ease-in-out;
}

.hidden-toggle:checked + .separator-line::after {
  transform: rotate(540deg);
}


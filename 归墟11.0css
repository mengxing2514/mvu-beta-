.sect-card.sect-bg-level-10:hover,
.sect-card.sect-bg-level-9:hover,
.sect-card.sect-bg-level-8:hover,
.sect-card.sect-bg-level-7:hover,
.sect-card.sect-bg-level-6:hover,
.sect-card.sect-bg-level-5:hover {
    filter: brightness(1.3);
    border-color: rgba(201, 170, 113, 0.6);
    transform: translateX(5px);
}

/* 10级：圣地 - 仙器渐变 */
.sect-card.sect-bg-level-10 {
    background: linear-gradient(135deg,
        rgba(255, 250, 205, 0.35),
        rgba(32, 104, 100, 0.28),
        rgba(255, 255, 255, 0.25),
        rgba(32, 104, 100, 0.28),
        rgba(255, 250, 205, 0.35)
    ) !important;
    background-size: 200% 200% !important;
    animation: sect-gradient-shift 8s ease infinite;
}

/* 9级：顶尖 - 红色渐变 */
.sect-card.sect-bg-level-9 {
    background: linear-gradient(135deg,
        rgba(220, 20, 60, 0.38),
        rgba(255, 69, 0, 0.30),
        rgba(178, 34, 34, 0.28),
        rgba(255, 69, 0, 0.30),
        rgba(220, 20, 60, 0.38)
    ) !important;
    background-size: 200% 200% !important;
    animation: sect-gradient-shift 8s ease infinite;
}

/* 8级：一流 - 道品渐变 */
